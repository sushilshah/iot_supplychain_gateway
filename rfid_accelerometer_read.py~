#!/usr/bin/env python


import os
import ConfigParser

def main():

	global sub_messages, pub_messages, the_topic_root
	
	default_cfg = {
		'url'        : 'localhost:1880',
		'baudRate'    : '115200',
		'connectPort'  : '/dev/ttyACM0',
		'device_id'  : '56789'
		}


	print('Config read from: ' + os.path.splitext(__file__)[0] + '.ini')
	cp = ConfigParser.SafeConfigParser(default_cfg)
	cp.read(os.path.splitext(__file__)[0] + '.ini')
	print('\n==================================')
	print('url       : ' + cp.get('PARAMETERS','url'))
	print('baudRate : ' + str(cp.getint('DEVICE_PARAMS','baudRate'))
	print('connectPort  : ' + cp.get('DEVICE_PARAMS','connectPort'))
	print('device_id  : ' + cp.get('DEVICE_PARAMS','device_id'))

main()
